# ─── LLM Provider Selection ───────────────────────────────────────────────────
# Set the default provider for all agents. Options: anthropic | openai | gemini | grok
LLM_PROVIDER=anthropic

# ─── API Keys ─────────────────────────────────────────────────────────────────
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
GROK_API_KEY=your_grok_api_key_here

# ─── Per-Agent Provider Overrides (optional) ──────────────────────────────────
# BRIEF_AGENT_PROVIDER=anthropic
# RESEARCH_AGENT_PROVIDER=openai
# OUTLINE_AGENT_PROVIDER=anthropic
# DRAFT_AGENT_PROVIDER=openai
# EDITOR_AGENT_PROVIDER=anthropic
# PUBLISH_AGENT_PROVIDER=anthropic

# ─── Model Overrides (optional) ───────────────────────────────────────────────
# ANTHROPIC_MODEL=claude-opus-4-5-20251101
# OPENAI_MODEL=gpt-4o
# GEMINI_MODEL=gemini-1.5-pro
# GROK_MODEL=grok-beta